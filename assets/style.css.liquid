body {
  padding: 10px 20px;
}

/* Header and navigation */

body > header {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  grid-column-gap: 5px;
  justify-items: center;
}

body > header > :nth-child(1) { grid-column-start: 2; }
body > header > :nth-child(2) { width: 100%; margin-left: auto; }

/* Bag */
header a[href="/cart"] {
  float: right;
}

/* navigation lists in general */
nav ul {
  list-style-type: none;
  padding-left: 10px;
}

