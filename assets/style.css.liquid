/* product navigation on one side */
.product-nav {
  width: 160px;
  float: left;
}

/* site navigation */
.site-nav {
  float: left;
  clear: both;
}

main {
  /* leave room for header and product-nav */
  margin-left: 180px;
}

}

/* sections directly within main get a divider */
/* SO 4131490 */
main > section:after {
	content: "";
	position: absolute;
	top: 0;
	left: 20%;
	width: 60%;
	border-top: 1px solid lightgray;
}

/* 
 *
 * Default element styling for the site
 *
 * */

body {
  font-family: "Lora", serif;
}

a {
  color: initial;
  text-decoration: none;
  font-weight: normal;
}

a:hover {
  text-decoration: underline;
}

abbr {
  text-decoration: none;
}

s {
  color: gray;
}

nav li {
  padding-right: 0.5vw;
}

button {
	display: block;
	border: none;
	border-radius: 3px;
	cursor: pointer;
	margin: 5px 0 5px 0;
	background: none;
	padding: 0;
	margin-left: auto;
	margin-right: auto;
}

button:hover,
button:focus {
  font-style: italic;
  outline: none;
}
