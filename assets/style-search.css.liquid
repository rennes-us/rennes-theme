/*
 *
 * Search
 *
 * */

/* The search form anywhere */
form[action="/search"] {
  white-space: nowrap;
}

/* Just the search box in the header */
header form[action="/search"] {
  margin-right: 10px;
}

/* Just the search page specifically,
see below for both cases */
article form[action="/search"] {
  padding-bottom: 1em;
  text-align: center;
	width: 100%;
}

form[action="/search"] input[type="text"] {
  border: none;
  border-bottom: 1px solid #555;
  font-family: "lora";
  outline-width: 0;
}

form[action="/search"] input[type="text"]:focus {
  border-bottom: 1px solid black;
}

form[action="/search"] input[type="submit"] {
  background: none;
  background: url({{ 'img-search.svg' | asset_url }});
  background-repeat: no-repeat;
  border: none;
  width: 15px;
}

form[action="/search"] input[type="submit"]:hover {
  cursor: pointer;
}

/* Search Results */
article[typeof="SearchResultsPage"] h2 {
  font-weight: normal;
  text-align: center;
}
