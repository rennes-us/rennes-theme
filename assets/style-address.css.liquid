/*
 *
 * Postal Address
 *
 * */

[typeof="PostalAddress"] {
  text-align: center;
  padding: 2em;
  position: relative;
  text-transform: lowercase;
}

[typeof="PostalAddress"] [property="streetAddress"] {
  display: block;
}

/* shortened border above main address */
main > [typeof="PostalAddress"]:after {
	content: "";
	position: absolute;
	top: 0;
	left: 20%;
	width: 60%;
	border-top: 1px solid lightgray;
}
