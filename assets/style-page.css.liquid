/*
 *
 * One-off pages
 *
 * */

article.page {
  margin-left: auto;
  margin-right: auto;
  min-width: 8em;
  max-width: 60em;
}

article.page p {
  min-width: 8em;
  max-width: 60em;
  text-align: justify;
}

article.page h1,
article.page h2,
article.page h3 {
  text-align: center;
}

/*
 * Two-column layout for individual pages as activated by choosing the
 * page.columns template in the UI.
 *
 * */

/* TODO make this look OK at small sizes */

article.columns {
  margin: 0 auto;
}

article.columns img {
  min-width: 200px;
  width: calc(50% - 20px);
  float: left;
  padding-right: 20px;
}

article.columns img.right {
  float: right;
  width: calc(50% - 80px);
  padding: 40px;
}
